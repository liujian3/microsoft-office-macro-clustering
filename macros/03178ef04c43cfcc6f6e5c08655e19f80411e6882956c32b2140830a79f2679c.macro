                                            guardAT.Add guard, True
                                        Else
                                            IsMatch = True
                                        End If
                                    Next
                                    If Not IsMatch Then
                                        'Xebug.Print "Replace '" & repl & "' at " & w & " with '" & rep & "'"
                                        If Not replWith.exists(repl & "|" & rep) Then
                                            replWith.Add repl & "|" & rep, True
                                        End If
                                    Else
