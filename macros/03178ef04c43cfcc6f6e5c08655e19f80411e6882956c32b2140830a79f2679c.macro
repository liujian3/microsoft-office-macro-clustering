Public Sub RemoveDeadBGDocs()
    Dim key As Variant
    Dim found As Boolean
    Dim doc As Document

    For Each key In BGDocs.Keys
        found = False
        For Each doc In app.Documents
            If key = doc.fullName Then
                found = True
                Exit For
            End If
        Next
        If Not found Then
            '!!!LogDebug "Not Found. Removing:" & key, "Manager.RemoveDeadBGDocs"
            BGDocs.Remove key
        End If
    Next
End Sub

