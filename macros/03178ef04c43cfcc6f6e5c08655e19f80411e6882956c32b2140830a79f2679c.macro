                                    End If
                                End If
                            Next
                        Else
                            'Xebug.Print "Not Found", fiFound, fiSymbolFound
                        End If
                    End If
    '                Debug.Print fi, rep
                Next
                Dim strR As Variant
                For Each strR In replWith
                    fixes = True
                    'Xebug.Print strR
                    ReplaceWith GetDocumentRange, CStr(strR)
