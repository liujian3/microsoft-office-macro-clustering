    TextBoxRevNo.Text = aRevHist(SelectedIndex, 0)
    TextBoxRevDate.Text = aRevHist(SelectedIndex, 1)
    TextBoxRevAuthor.Text = aRevHist(SelectedIndex, 2)
    TextBoxRevDescription.Text = aRevHist(SelectedIndex, 3)
    Update
