Private Sub ReplaceStyleInRange(rng As Range, oldStyle As Variant, NewStyle As String)
    
    With rng.find
         .ClearFormatting
         .Style = oldStyle
         .Replacement.Style = NewStyle
         .Execute
         'rng.Select
         If .found Then
            .Execute Replace:=wdReplaceAll
         End If
     End With
End Sub


