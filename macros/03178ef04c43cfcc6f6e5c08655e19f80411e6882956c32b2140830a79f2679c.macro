Public Sub InsertTabInFirstChar(styleName As String)
    Dim rng As Range
    Set rng = ThisDoc.Content
    With rng.find
         .ClearFormatting
         .Style = styleName
         While .Execute
            rng.InsertBefore vbTab
         Wend
    End With
End Sub

Public Sub ReformatTOCHyperlinks()
