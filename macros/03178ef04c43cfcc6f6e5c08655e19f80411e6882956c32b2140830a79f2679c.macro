Public Sub ConvertWPSDumpFontLine(para As Paragraph)
    Dim str As String
    Dim rng As Range
    Dim ch As String
    Dim val As Long
    Dim newVal As Long
    Dim strOut As String
    Set rng = para.Range.Duplicate
    rng.End = rng.End - 1
    
    Dim i As Long
    Dim length As Long
    str = rng.Text
    For i = 1 To Len(str)
        ch = Mid(str, i, 1)
        val = AscW(ch) And &HFFFF&
        If val > 255 Then
            newVal = 32 'Xebug.Print val
        Else
            newVal = Conv437Unicode(val)
        End If
        strOut = strOut & ChrW(newVal)
    Next
    rng.Text = strOut
End Sub

