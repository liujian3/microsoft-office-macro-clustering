Public Sub KillFilesAndFolder(strFullName As String)
    Dim filesFolder As String
    
    If strFullName > "" Then
        filesFolder = Mid(strFullName, 1, InStrRev(strFullName, "\"))
        Kill filesFolder & "*.*"
        RmDir filesFolder
        Kill Mid(strFullName, 1, InStrRev(strFullName, "_files") - 1) & ".htm"
    End If
End Sub



