Function TienBangChu(ByVal SoTien As Double) As String
Dim chu As String
chu = DocTienBangChu(SoTien, " " & ChrW(273) & ChrW(7891) & "ng")
chu = "B" & ChrW(7857) & "ng ch" & ChrW(7919) & ": " & chu & "./."

TienBangChu = chu

End Function

